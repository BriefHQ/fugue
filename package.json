{
  "name": "fugue",
  "version": "2.0.0",
  "description": "Fractional indexing without conflicts.",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist node_modules coverage",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "release": "pnpm run build && pnpm publish",
    "test": "vitest run --typecheck --coverage",
    "test:types": "cd tests && tsc --noEmit",
    "test:bench": "vitest bench",
    "test:ui": "vitest --ui",
    "size": "size-limit"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BriefHQ/fugue.git"
  },
  "keywords": [
    "fractional indexing",
    "sync",
    "local-first",
    "fugue",
    "database",
    "typescript",
    "ts"
  ],
  "author": "BriefHQ",
  "license": "MIT",
  "homepage": "https://github.com/BriefHQ/fugue",
  "bugs": {
    "url": "https://github.com/BriefHQ/fugue/issues"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/node": "^22.14.0",
    "@vitest/coverage-v8": "3.1.1",
    "@vitest/ui": "^3.1.1",
    "esbuild": "^0.25.2",
    "fractional-indexing": "^3.2.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "size-limit": "^11.2.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "size-limit": [
    {
      "path": "dist/index.js"
    }
  ]
}
